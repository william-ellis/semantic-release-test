{
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "devDependencies": {
    "@semantic-release/exec": "^6.0.3",
    "semantic-release": "19.0.5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      ["@semantic-release/exec", {
        "verifyReleaseCmd": "Set-AzPipelineVariable nextVersion ${nextRelease.version} -Output -Verbose; Set-AzPipelineVariable trigger $true -Output -Verbose",
        "shell": "pwsh"
      }]
    ]
  }
}
